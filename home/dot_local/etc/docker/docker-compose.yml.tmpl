services:
  victoria-metrics:
    image: victoriametrics/victoria-metrics
    command: |
      -retentionPeriod 5y
      -selfScrapeInterval 10s
      -promscrape.config /etc/prometheus/prometheus.yml
      -promscrape.configCheckInterval 30s
      -usePromCompatibleNaming
    container_name: victoria-metrics
    restart: always
    volumes:
      - victoria-metrics-data:/victoria-metrics-data
      - $HOME/.local/etc/prometheus/prometheus.yml:/etc/prometheus/prometheus.yml:ro
    tmpfs:
      - /tmp
    network_mode: host

  node-exporter:
    image: quay.io/prometheus/node-exporter
    command:
      - --collector.processes
      - --collector.systemd
      - --path.rootfs
      - /host
    container_name: node-exporter
    restart: always
    pid: host
    volumes:
      - /:/host:ro,rslave
    tmpfs:
      - /tmp
    network_mode: host

  loki:
    image: grafana/loki
    container_name: loki
    restart: always
    volumes:
      - loki-data:/loki
    tmpfs:
      - /tmp
    network_mode: host

  promtail:
    image: grafana/promtail
    command:
      - --config.file
      - /etc/grafana/promtail.yaml
    container_name: promtail
    restart: always
    volumes:
      - $HOME/.local/etc/grafana/promtail.yaml:/etc/grafana/promtail.yaml
    network_mode: host
                  
  grafana:
    image: grafana/grafana-oss
    container_name: grafana
    restart: always
    volumes:
      - grafana-data:/var/lib/grafana
      - $HOME/.local/etc/grafana/grafana.ini:/etc/grafana/grafana.ini
    tmpfs:
      - /tmp
    network_mode: host
    depends_on:
      - loki
      - victoria-metrics
    
volumes:
  grafana-data:
  loki-data:
  victoria-metrics-data:
