#!/usr/bin/env bash
set -eo pipefail

_fn() {
  readonly version="0.1.2"
  readonly prog="$HOME/.cargo/bin/mw"
  if [ ! -x "$prog" ] || [[ "$("$prog" --version)" != *"$version"* ]]; then
    cargo install \
      --config net.git-fetch-with-cli=true    \
      --git ssh://git@github.com/mway/mway-rs \
      --tag "$version"                        \
      mw
  fi

  exec "$prog" "$@"
}

_fn "$@"
