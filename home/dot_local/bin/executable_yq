#!/usr/bin/env bash
set -eo pipefail

# shellcheck disable=SC2155
_fn() {
  readonly name="yq"
  readonly prog="$HOME/go/bin/$name"
  readonly detected_version="$(mw version "$name" 2>/dev/null || true)"
  readonly version="${detected_version:-"4.33.3"}"
  if [ ! -x "$prog" ] || [[ "$("$prog" --version)" != *"$version"* ]]; then
    go install "github.com/mikefarah/yq/v4@v$version"
  fi

  exec "$prog" "$@"
}

_fn "$@"
