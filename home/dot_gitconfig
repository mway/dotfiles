	user = mway
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = green
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[diff]
	renames = copies
	external = difft
[help]
	autocorrect = 1
[push]
	default = current
	followTags = true
[core]
	excludesfile = ~/.gitignore
	editor = hx
[merge]
	conflictstyle = diff3
[mergetool]
	keepBackup = true
[alias]
	l = log --pretty=oneline -n 20 --graph --abbrev-commit
	lg = log --graph --pretty=format:'%C(bold red)%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	s = status -s
	d = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
	changed = !"git diff-tree -r --name-only --no-commit-id HEAD"
	tags = tag -l
	branches = branch -a
	remotes = remote -v
	retag = "!r() { git tag -d $1 && git push origin :refs/tags/$1 && git tag $1; }; r"
	sshow = "!f() { git stash show stash^{/$*} -p; }; f"
	sapply = "!f() { git stash apply stash^{/$*}; }; f"
	spop = "!f() { git stash pop stash^{/$*}; }; f"
	po = push origin
	pto = push --tags origin
	newbranch = "!f() { cur=\"$(git rev-parse --abbrev-ref HEAD)\"; git checkout -b $1; git branch -u $cur; }; f"
	curbranch = symbolic-ref --short HEAD
	show-files = show --pretty="format:" --name-only
	amend = commit --amend -C HEAD
[branch]
	autosetuprebase = always
[rerere]
	enabled = true
