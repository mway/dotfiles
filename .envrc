# ALIASES
alias ls="ls -G"
alias vi="vi -p"
alias vim="vim -p"
alias cmore="less"
alias tmux="rm -rf /tmp/tmux*;tmux"
alias wudo="cygstart --action=runas $@"

# LESS w/COLORS
export LESS='-R'
export LESSOPEN='|~/.lessfilter %s'
export LS_COLORS='di=38;5;108:fi=00:*svn-commit.tmp=31:ln=38;5;116:ex=38;5;186'

# BASH PROMPT
export PS1="\u@\h:\w\a$ "

colours() {
    for i in {0..255}; do
        printf "\x1b[38;5;${i}mcolour${i}\n"
    done
}
